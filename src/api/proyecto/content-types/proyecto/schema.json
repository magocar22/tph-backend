{
  "kind": "collectionType",
  "collectionName": "proyectos",
  "info": {
    "singularName": "proyecto",
    "pluralName": "proyectos",
    "displayName": "Proyecto"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "titulo"
    },
    "ubicacion": {
      "type": "string"
    },
    "estado": {
      "type": "enumeration",
      "enum": [
        "En comercialización",
        "En construcción",
        "Entregado"
      ]
    },
    "imagen_principal": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "descripcion_corta": {
      "type": "text"
    },
    "descripcion_larga": {
      "type": "blocks"
    },
    "inversores": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "proyectos"
    },
    "documentos_privados": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
